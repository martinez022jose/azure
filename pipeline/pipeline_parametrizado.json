{
	"name": "pipeline_parametrizado",
	"properties": {
		"activities": [
			{
				"name": "cargas_csv_to_parquet",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"wildcardFileName": "*.csv",
							"enablePartitionDiscovery": true
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "ParquetSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "ParquetWriteSettings"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "cargas_csv",
						"type": "DatasetReference",
						"parameters": {
							"file_name": {
								"value": "@pipeline().parameters.cargas",
								"type": "Expression"
							},
							"folder": {
								"value": "@pipeline().parameters.folder_csv",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "cargas_parquet",
						"type": "DatasetReference",
						"parameters": {
							"folder": {
								"value": "@pipeline().parameters.folder_parquet",
								"type": "Expression"
							},
							"file_name": {
								"value": "@pipeline().parameters.cargas",
								"type": "Expression"
							}
						}
					}
				]
			},
			{
				"name": "sites_csv_to_parquet",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "cargas_csv_to_parquet",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "ParquetSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "ParquetWriteSettings"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "sites_csv",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "cargas_parquet",
						"type": "DatasetReference",
						"parameters": {
							"folder": {
								"value": "@pipeline().parameters.folder_parquet",
								"type": "Expression"
							},
							"file_name": {
								"value": "@pipeline().parameters.sites",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"folder_csv": {
				"type": "string",
				"defaultValue": "files_csvs"
			},
			"folder_parquet": {
				"type": "string",
				"defaultValue": "files_parquet"
			},
			"sites": {
				"type": "string",
				"defaultValue": "sitios.csv"
			},
			"cargas": {
				"type": "string",
				"defaultValue": "cargas.csv"
			}
		},
		"annotations": []
	}
}